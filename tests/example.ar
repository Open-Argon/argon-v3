let getInitials(name) = do
    name = name.upper()
    namesplit = name.split(" ")
    i = 0
    while (i < namesplit.length) do
        namesplit[i] = namesplit[i][0]
        i = i + 1
    return namesplit.join("")

name = "william bell"
term.log(getInitials(name))
term.log(name)

let addLastName(name) = name.append(" Bell")

name = "William"
addLastName(name)
term.log(name)